<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Edit Info Title -->

    <!-- Scrollable Content -->

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:text="Edit Info"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Done Button -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView30"
        android:layout_above="@id/bottomButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Media Section -->

            <!-- Media Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#141218"
                android:padding="12sp"
                android:text="MEDIA"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Media ImageView -->
            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:paddingTop="12sp"
                android:paddingBottom="12sp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12sp"
                android:text="ABOUT ME"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileBio"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#293539"
                android:ems="10"
                android:hint="Describe Yourself"
                android:inputType="text"
                android:padding="12sp"
                android:textColor="#F3F1F1" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12sp"
                android:text="INTEREST"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileInterest"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#293539"
                android:ems="10"
                android:hint="Enter your Interest"
                android:inputType="text"
                android:padding="12sp"
                android:textColor="#F3F1F1" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12sp"
                android:text="HEIGHT"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileHeight"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#293539"
                android:ems="10"
                android:hint="cm"
                android:inputType="text"
                android:padding="12sp"
                android:textColor="#F3F1F1" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12sp"
                android:text="LANGUAGE I KNOW"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EditProfileLanguage"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="#293539"
                android:ems="10"
                android:hint="Enter the language you know"
                android:inputType="text"
                android:padding="12sp"
                android:textColor="#F3F1F1" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12sp"
                android:text="MORE ABOUT ME"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:padding="15sp"
                        android:text="Zodiac"
                        android:textColor="#FFFEFE"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EditProfileZodiac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:ems="10"
                        android:hint="> Enter your Zodiac"
                        android:inputType="text"
                        android:padding="15sp"
                        android:textColor="#F3F2F2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:padding="15sp"
                        android:text="Blood type"
                        android:textColor="#FFFEFE"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EditProfileBlood"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:ems="10"
                        android:hint="> A/B/AB/O"
                        android:inputType="text"
                        android:padding="15sp"
                        android:textColor="#F3F2F2" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#141218"
                android:padding="12dp"
                android:text="LIFESTYLE"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:padding="15sp"
                        android:text="Workout"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EditProfileGym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:ems="10"
                        android:hint="> Yes/No/Often"
                        android:inputType="text"
                        android:padding="15sp"
                        android:textColor="#F3F2F2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:padding="15sp"
                        android:text="Sleeping Habits"
                        android:textColor="#FFFEFE"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/EditProfileSleep"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#293539"
                        android:ems="10"
                        android:hint="> EarlyBird/NightOwl"
                        android:inputType="text"
                        android:padding="15sp"
                        android:textColor="#F3F2F2" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="#FDF6FE"
        android:text="Done"
        android:textColor="#2E82E8"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

    </LinearLayout>


</RelativeLayout>