<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Media Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Media Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Media"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Media ImageView -->

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="149dp"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imageViewMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/your_image_placeholder" />

    </LinearLayout>

    <!-- About Me Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- About Me Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Me"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- About Me EditText -->
        <EditText
            android:id="@+id/editTextAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write about yourself..."
            android:inputType="textMultiLine"
            android:minLines="3" />

    </LinearLayout>

    <!-- Interests Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ray"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Interests Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interests"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Interests EditText -->
        <EditText
            android:id="@+id/editTextInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your interests..."
            android:inputType="textMultiLine"
            android:minLines="2" />

    </LinearLayout>

    <!-- Add more sections as needed -->

</LinearLayout>
